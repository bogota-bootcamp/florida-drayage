<%= form_for [@quotation, @invoice], remote:true do |f| %>

  <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">account_circle</i>          
        <%= f.text_field :first_name, class: "validate", id:"invoice_first_name"%>
        <label for="invoice_first_name" class= "label-cursor <%= 'active' unless (@invoice.first_name.nil? || @invoice.first_name.empty?) %>">First Name</label>
      </div>
    </div>

    <div class="row">  
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">account_circle</i>          
        <%= f.text_field :last_name, class: "validate", id:"invoice_last_name" %>
        <label for="invoice_last_name" class= "label-cursor <%= 'active' unless (@invoice.last_name.nil? || @invoice.last_name.empty?) %>">Last Name</label>
      </div>
    </div>

    <div class="row">      
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">domain</i>          
        <%= f.text_field :company, class: "validate", id:"invoice_company"%>
          <label for="invoice_company" class= "label-cursor <%= 'active' unless (@invoice.company.nil? || @invoice.company.empty?)%>">Company</label>
        </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">phone</i>
        <%= f.text_field :phone, class: "validate", id:"invoice_phone"%>
        <label for="invoice_phone" class= "label-cursor <%= 'active' unless (@invoice.phone.nil? )%>">Telephone</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">email</i>          
        <%= f.email_field :email, id:"invoice_email"%>
        <label for="invoice_email" class= "label-cursor <%= 'active' unless (@invoice.email.nil? || @invoice.email.empty?)%>">E-mail</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">comment</i>          
        <%= f.text_area :comments, class: "validate materialize-textarea", id:"invoice_comments"%>
        <label for="invoice_comments" class= "label-cursor <%= 'active' unless (@invoice.comments.nil? || @invoice.comments.empty?)%>">Comments</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col m12 s12">
        <i class="material-icons prefix icon-color">markunread_mailbox</i>     
        <%= f.text_field :origin_city, class: "validate autocomplete city", id:"invoice_origin_city"%>
        <label for="invoice_origin_city" class= "label-cursor <%= 'active' unless (@invoice.origin_city.nil? || @invoice.origin_city.empty?)%>">Origin city</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col m12 s12">
        <i class="material-icons prefix icon-color">map</i>          
        <%= f.text_field :origin_zipcode, class: "validate  autocomplete", id:"invoice_origin_zipcode"%>
        <label for="invoice_origin_zipcode" class= "label-cursor <%= 'active' unless (@invoice.origin_zipcode.nil? )%>">Origin Zipcode</label> 
      </div>
    </div>

    <div class="row">
      <div class="input-field col m12 s12">
        <i class="material-icons prefix icon-color">markunread_mailbox</i> 
        <%= f.text_field :destination_city, class: "validate autocomplete city", id:"invoice_destination_city"%>
        <label for="invoice_destination_city" class= "label-cursor <%= 'active' unless (@invoice.destination_city.nil? || @invoice.destination_city.empty?)%>">Destination city</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col m12 s12">
        <i class="material-icons prefix icon-color">map</i>          
        <%= f.text_field :destination_zipcode, class: "validate", id:"invoice_destination_zipcode"%>
        <label for="invoice_destination_zipcode" class= "label-cursor <%= 'active' unless (@invoice.destination_zipcode.nil? )%>">Destination Zipcode</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">comment</i>          
        <%= f.text_field :commodity, class: "validate", id:"invoice_commodity"%>
        <label for="invoice_commodity" class= "label-cursor <%= 'active' unless (@invoice.commodity.nil? || @invoice.commodity.empty?)%>">commodity</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col m12 s12">       
        <label>        
          <%= f.check_box :hazardous, checked_value: @invoice.hazardous %>
          <span>Hazardous</span>
        </label>
      </div>

      <div class="input-field col m12 s12">      
        <label>
          <%= f.check_box :bonded_cargo, checked_value: @invoice.bonded_cargo%>
          <span>Bonded Cargo</span>
        </label>         
      </div>            
    </div>

    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">comment</i>
        <%= f.text_field :overweight, class: "validate ", id:"invoice_overweight"%>
        <label for="invoice_overweight" class= "label-cursor <%= 'active' unless (@invoice.overweight.nil? )%>">Overweight</label>
        </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">date_range</i>          
        <%= f.text_field :pickup_date, class: "validate datepicker", id:"invoice_pickup_date"%>
        <label for="invoice_pickup_date" class= "label-cursor <%= 'active' unless (@invoice.pickup_date.nil? ) %>">PickUp Date</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">date_range</i>          
        <%= f.text_field :drop_date, class: "validate datepicker", id:"invoice_drop_date"%>
        <label for="invoice_drop_date" class= "label-cursor <%= 'active' unless (@invoice.drop_date.nil? )%>">Drop Date</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix icon-color">local_shipping</i>          
        <%= f.select(:equipment_type, Quotation::EQUIPMENT_TYPES, {include_blank: "Select type"}) %>
        <label for="invoice_equipment_type" class= "label-cursor <%= 'active' unless (@invoice.equipment_type.nil? || @invoice.equipment_type.empty?) %>">Equipment Type</label>
      </div>
    </div> 


  <h4>Suggested Price: $<%= @quotation.suggested_price %></h4>
  <label>Price($USD):</label>
  <%= f.text_field :price, class: "validate", :html=>{:id=>"icon_prefix"} ,required: true,layout: false%>
  <%= f.submit%>
 
 <% end %>

<%= javascript_include_tag "form_invoice" %>